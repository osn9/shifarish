@model SifarishView.Areas.GharJagga.Models.DepartmentViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.Title = "Index";
}


<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Edit Profile</h4>
                    </div>
                    <div class="content">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.DeparmentId)
                            <form>
                                <div class="row">
                                    <div class="col-md-10">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.DepartmentName, htmlAttributes: new { @class = "control-label " })
                                            @Html.EditorFor(model => model.DepartmentName, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.DepartmentName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-md-10">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.DepartmentAddress, htmlAttributes: new { @class = "control-label " })
                                            @Html.EditorFor(model => model.DepartmentAddress, new { htmlAttributes = new { @class = "form-control" } })


                                            @Html.ValidationMessageFor(model => model.DepartmentAddress, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-md-10">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.DepartmentCode, htmlAttributes: new { @class = "control-label " })
                                         
                                            @Html.TextBoxFor(model => model.DepartmentCode, new { @class = "form-control" })

                                            @Html.ValidationMessageFor(model => model.DepartmentCode, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                </div>

                                <button type="submit" class="btn btn-info btn-fill pull-right">Update Profile</button>
                                <div class="clearfix"></div>
                            </form>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>