@model Sifaris.Models.ShreniModel
@using Sifaris.Converter

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*@{
    int empId = Utility.GetEmployeeId(Utility.GetCurrentLoginUser());
    int UserTypeId = Utility.GetEmployeeUserTypeId(empId);
}*@

<link href="~/Scripts/DataTable/datatables.min.css" rel="stylesheet" />
<script src="~/Scripts/DataTable/datatables.min.js"></script>
<br />
<div class="row">
    <div class="span4">
        <h4>कर्मचारी श्रेणी</h4>
    </div>
    <div class="pull-right">
        <a class="btn btn-primary " href="@Url.Action("Create", "Shreni")">
            नयाँ बनाउने
        </a>
    </div>
    @*@if (Utility.CheckCreateRightsForLoggedInUser("Shreni", UserTypeId))
    {
        <div class="pull-right">
            <a class="btn btn-primary " href="@Url.Action("Create", "Shreni")">
                नयाँ बनाउने
            </a>
        </div>
    }*@

</div>
<br />
<div class="well well-small">
    @if (Model.ShreniList.Count > 0)
    {
        int Sno = ViewBag.currentPage == 1 ? 0 : (ViewBag.currentPage - 1) * 200;
        <table id="PadhaTable" class="table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th class="span1"><label> क्र.सं.</label> </th>


                    <th> @Html.LabelFor(model => model.ShreniName)</th>
                    <th> @Html.LabelFor(model => model.ShreniScheduleId)</th>
                    <th></th>
                    @*@if (Utility.CheckEditRightsForLoggedInUser("Shreni", UserTypeId))
                    {
                        <th></th>
                    }*@
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ShreniList)
                {

                    <tr class="@(Sno++ % 2 == 0 ? "success" : "warning")">
                        <td class="span1l">
                            @UnicodeConverter.Default(@Sno.ToString())
                        </td>
                        <td>@item.ShreniName</td>
                        <td>@item.ShreniScheduleId</td>
                        <td>
                            <a href="/Shreni/Edit/@item.ShreniId" title="सम्पादन"><i class="fa fa-edit" style="color:blue;"></i></a>
                            @*<a href="/Shreni/Delete/@item.ShreniId" onclick="return confirm('के तपाई हटाउन चाहानु हुन्छ?')" title="हटाउने"><i class="fa fa-trash-o" style="color:red;"></i></a>*@
                        </td>
                        @*@if (Utility.CheckEditRightsForLoggedInUser("Shreni", UserTypeId))
                        {
                            <td>
                                <a href="/Shreni/Edit/@item.ShreniId" title="सम्पादन"><i class="fa fa-edit" style="color:blue;"></i></a>
                                
                            </td>
                        }*@

                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h4>कुनै पनि रेकड फेला परेन!</h4>
    }

</div>
<script>
    $(document).ready(function () {
        // Setup - add a text input to each footer cell
        // DataTable
        var table = $('#PadhaTable').DataTable({
            "order": false,
            "pageLength": 25,
            "language": {
                "lengthMenu": "Display _MENU_ records per page",
                "zeroRecords": "कुनै पनि रेकड फेला परेन!",
                "info": " पृष्ठ _PAGE_ को _PAGES_",
                "infoEmpty": "No records available",
                "infoFiltered": "(filtered from _MAX_ total records)",
                "paginate":
                {
                    "previous": "आघिल्लो",
                    "next": "पछिल्लो"
                }
            }
        });


    });
</script>

