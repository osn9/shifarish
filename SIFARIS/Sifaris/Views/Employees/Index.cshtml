@model Sifaris.Models.EmployeesModel
@using Sifaris.Converter
@{
    ViewBag.Title = "कर्मचारी व्यवस्थापन";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*@{
    int empId = Utility.GetEmployeeId(Utility.GetCurrentLoginUser());
    int UserTypeId = Utility.GetEmployeeUserTypeId(empId);
}*@
<link href="~/Scripts/DataTable/datatables.min.css" rel="stylesheet" />
<script src="~/Scripts/DataTable/datatables.min.js"></script>

@if (TempData["message"] != null)
{
    <div class="alert alert-danger text-center">
        @TempData["message"]
    </div>
}
@Html.HiddenFor(model => model.EmployeeId)
<br />
<div class="row">
    <div class="span4">
        <h4>कर्मचारी व्यवस्थापन</h4>
    </div>
    <div class="pull-right">
        <a class="btn btn-primary" href="@Url.Action("Create", "Employees")">
            नयाँ बनाउने
        </a>
    </div>
    @*@if (Utility.CheckCreateRightsForLoggedInUser("Employees", UserTypeId))
    {
        <div class="pull-right">
            <a class="btn btn-primary" href="@Url.Action("Create", "Employees")">
                नयाँ बनाउने
            </a>
        </div>
    }*@
</div>

<div id="itemList" class="well well-small">

    @if (Model.EmployeesList.Count > 0)
    {
        int Sno = ViewBag.currentPage == 1 ? 0 : (ViewBag.currentPage - 1) * 20;
        <table id="EmployeeTable" class="table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th class="span1"><label> क्र.सं.</label> </th>
                    <th> @Html.LabelFor(model => model.EmployeeName)</th>
                    <th> @Html.LabelFor(model => model.ShreniId)</th>
                    <th> @Html.LabelFor(model => model.PadhaId)</th>
                    <th> @Html.LabelFor(model => model.UserTypeId)</th>
                    <th></th>
                    @*@if (Utility.CheckEditRightsForLoggedInUser("Employees", UserTypeId))
                    {
                        <th></th>
                    }*@
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.EmployeesList)
                {

                    <tr class="@(Sno++ % 2 == 0 ? "success" : "warning")">
                        <td class="span1">@UnicodeConverter.Default(@Sno.ToString())</td>
                        <td>@item.EmployeeName [@item.INVId]</td>
                        <td>@Sifaris.Utility.GetShreniById(item.ShreniId)</td>
                        <td>@Sifaris.Utility.GetPadhaById(item.PadhaId)</td>
                        <td>@Sifaris.Utility.GetUserTypeById(item.UserTypeId).Title</td>
                        <td>
                            <a href="/Employees/Edit/@item.EmployeeId" title="सम्पादन"><i class="fa fa-edit" style="color:blue;"></i></a>
                            <a class="details" href="/Employees/Details/@item.EmployeeId" title="विवरण"><i class="fa fa-pinterest" style="color:black;" data-toggle="modal" data-target="#myModal"></i></a>
                        </td>
                    @*@if (Utility.CheckEditRightsForLoggedInUser("Employees", UserTypeId))
                    {
                        <td>
                            <a href="/Employees/Edit/@item.EmployeeId" title="सम्पादन"><i class="fa fa-edit" style="color:blue;"></i></a>                            
                            <a class="details" href="/Employees/Details/@item.EmployeeId" title="विवरण"><i class="fa fa-pinterest" style="color:black;" data-toggle="modal" data-target="#myModal"></i></a>
                            <a href="/Employees/ResetPassword/@item.EmployeeId" title="Reset Password"><i class="fa fa-key"></i></a>
                            <a href="/Account/Register/@item.EmployeeId" title="Create UserName/Password"><i class="fa fa-user"></i></a>
                        </td>
                    }*@
                </tr>
                }
            </tbody>
            
        </table>
        
    }
    else
    {
        <h4>कुनै पनि रेकड फेला परेन!</h4>
    }

</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="myModalLabel">कर्मचारी व्यवस्थापन</h4>
            </div>
            <div id="ModalBody" class="modal-body">
                <form></form>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        // DataTable
        var table = $('#EmployeeTable').DataTable({
            "order": false,
            "pageLength": 25,
            "language": {
                "lengthMenu": "Display _MENU_ records per page",
                "zeroRecords": "कुनै पनि रेकड फेला परेन!",
                "info": " पृष्ठ _PAGE_ को _PAGES_",
                "infoEmpty": "No records available",
                "infoFiltered": "(filtered from _MAX_ total records)",
                "paginate":
                {
                    "previous": "आघिल्लो",
                    "next": "पछिल्लो"
                }
            }
        });

        $('#EmployeeTable thead th').each(function (index, item) {
            if (index != 0 && index != 5) {
                debugger;
                var select = $('<select><option value="">' + $(item).text() + '</option> </select>')
                    .appendTo($(item).empty())
                    .on('change', function () {
                        changeid(index, $(this).val())
                    });
                table.column(index).data().unique().sort().each(function (d, j) {

                    select.append('<option value="' + d + '">' + d + '</option>')
                });
            }
        });
        function changeid(index, val) {
            //alert(index + ' ' + val)
            table.column(index)
                .search(val ? '^' + val + '$' : '', true, false)
                .draw();
        }
        $(".details").on("click", function () {
            var taskId = $('#empid').val();
            debugger
            var href = $(this).attr('href');
            $.ajax({
                url: href,
                success: function (data) {
                    if (data) {
                        $('#ModalBody').html(data);
                    }

                },
                error: function (xhr, status, error) {
                    alert("Error");
                }
            });

        });

    });
</script>
