@model Sifaris.Models.EmployeesModel

@{
    ViewBag.Title = "कर्मचारी व्यवस्थापन - नयाँ बनाउने";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>

</head>
<body>
    <div class="well well-small">
        @if (TempData["message"] != null)
        {
            <div class="alert alert-danger text-center">
                @TempData["message"]
            </div>
        }

        @using (Html.BeginForm())
        {
            @Html.HiddenFor(model => model.EmployeeId)
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            @*<div class="btn pull-right"> @Html.ActionLink("Change Password","Register","Account")</div>*@
            Html.RenderPartial("VUC_Add");
            <br />
            <input type="submit" value="सेभ गर्नुहोस" class="btn" />
            @*<div class="btn"> @Html.ActionLink("पछाडी फर्कनुहोस्", "Index")</div>*@
            <div class="btn"> @Html.ActionLink("पछाडी फर्कने", null, null, null, new { href = Request.UrlReferrer })</div>

        }
    </div>
</body>
</html>

