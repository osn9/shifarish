@{
    ViewBag.Title = "कर्मचारी पद";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Scripts/DataTable/datatables.min.css" rel="stylesheet" />
<script src="~/Scripts/DataTable/datatables.min.js"></script>

@*@{
    int empId = Utility.GetEmployeeId(Utility.GetCurrentLoginUser());
    int UserTypeId = Utility.GetEmployeeUserTypeId(empId);
}*@
<br />
<div class="row">
    <div class="span4">
        <h4>कर्मचारी पद</h4>
    </div>
    <div class="pull-right">
        <a class="btn btn-primary" href="@Url.Action("Create", "Padha")">
            नयाँ बनाउने
        </a>

    </div>
    @*@if (Utility.CheckCreateRightsForLoggedInUser("Padha", UserTypeId))
    {
        <div class="pull-right">
            <a class="btn btn-primary" href="@Url.Action("Create", "Padha")">
                नयाँ बनाउने
            </a>

        </div>
    }*@

</div>
<br />
<div class="well well-small">
    @if (Model.PadhaModelList.Count > 0)
    {
        int Sno = ViewBag.currentPage == 1 ? 0 : (ViewBag.currentPage - 1) * 20;
        <table id="PadhaTable" class="table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th class="span1"><label> क्र.सं.</label> </th>
                    <th> @Html.LabelFor(model => model.ShreniId)</th>

                    <th> @Html.LabelFor(model => model.PadhaName)</th>
                    <th></th>
                    @*@if (Utility.CheckEditRightsForLoggedInUser("Padha", UserTypeId))
                    {
                        <th></th>
                    }*@
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.PadhaModelList)
                {

                    <tr class="@(Sno++ % 2 == 0 ? "success" : "warning")">
                        <td class="span1l">
                            @UnicodeConverter.Default(@Sno.ToString())
                        </td>
                        <td>@Utility.GetShreniById(item.ShreniId)</td>
                        <td>@item.PadhaName</td>
                        <td>
                            <a href="/Padha/Edit/@item.PadhaId" title="सम्पादन"><i class="fa fa-edit" style="color:blue;"></i></a>
                            
                        </td>
                        @*@if (Utility.CheckEditRightsForLoggedInUser("Padha", UserTypeId))
                        {
                            <td>
                                <a href="/Padha/Edit/@item.PadhaId" title="सम्पादन"><i class="fa fa-edit" style="color:blue;"></i></a>
                                
                            </td>
                        }*@

                    </tr>
                }
            </tbody>
            
        </table>

    }
    else
    {
        <h4>कुनै पनि रेकड फेला परेन!</h4>
    }

</div>
<script>
    $(document).ready(function () {
        // Setup - add a text input to each footer cell
        // DataTable
        var table = $('#PadhaTable').DataTable({
            "order": false,
            "pageLength": 25,
            "language": {
                "lengthMenu": "Display _MENU_ records per page",
                "zeroRecords": "कुनै पनि रेकड फेला परेन!",
                "info": " पृष्ठ _PAGE_ को _PAGES_",
                "infoEmpty": "No records available",
                "infoFiltered": "(filtered from _MAX_ total records)",
                "paginate":
                {
                    "previous": "आघिल्लो",
                    "next": "पछिल्लो"
                }
            }
        });
        $('#PadhaTable thead th').each(function (index, item) {
            if (index != 0 && index != 3) {

                var select = $('<select><option value="">' + $(item).text() + '</option> </select>')
                    .appendTo($(item).empty())
                    .on('change', function () {
                        changeid(index, $(this).val())

                    });
                table.column(index).data().unique().sort().each(function (d, j) {
                    debugger;
                    select.append('<option value="' + d + '">' + d + '</option>')
                });
            }
        });
        function changeid(index, val) {
            table.column(index)
                .search(val ? '^' + val + '$' : '', true, false)
                .draw();
        }

    });
</script>

